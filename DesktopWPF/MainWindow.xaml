                <Canvas x:Name="cnvGameField" Grid.Row="4" Grid.ColumnSpan="8" Grid.RowSpan="5">
                    <Canvas.Background>
                        <ImageBrush ImageSource="Resources/Soccer_field.png"/>
                    </Canvas.Background>
                </Canvas>

            </Grid>
        </TabItem>
    </TabControl>

</Window>
