                <Grid x:Name="gridGameField77" Grid.Row="7" Grid.Column="7" MinHeight="80" MinWidth="80" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                
                <Grid x:Name="gridGameField80" Grid.Row="8" Grid.Column="0" MinHeight="80" MinWidth="80" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Grid x:Name="gridGameField81" Grid.Row="8" Grid.Column="1" MinHeight="80" MinWidth="80" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
